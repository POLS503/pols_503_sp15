\AtBeginSection[] % Do nothing for \section*
{
  \begin{frame}
    \frametitle{}
    \tableofcontents[currentsection]
  \end{frame}
}

\AtBeginSubsection[] % Do nothing for \section*
{
  \begin{frame}
    \frametitle{}
    \tableofcontents[currentsection,currentsubsection]
  \end{frame}
}

